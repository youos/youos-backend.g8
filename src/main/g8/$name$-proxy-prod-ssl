# nginx configuration file for production environment (SSL)
server {
  # SSL configuration by letsencrypt / certbot
  ssl_certificate           /etc/letsencrypt/live/api.$projectname;format="normalize"$.$domain$/fullchain.pem;
  ssl_certificate_key       /etc/letsencrypt/live/api.$projectname;format="normalize"$.$domain$/privkey.pem;
  include /etc/letsencrypt/options-ssl-nginx.conf;
  ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

  # HSTS (ngx_http_headers_module is required) (15768000 seconds = 6 months)
  add_header Strict-Transport-Security max-age=15768000;

  listen       [::]:443 ssl;
  listen       443 ssl;
  server_name  api.$domain$;
  client_max_body_size	10M;

  location / {
    proxy_pass http://127.0.0.1:90$portsuffix$;
    proxy_set_header X-Real-IP \$remote_addr;
    proxy_set_header Host \$host;
    proxy_set_header X-Forwarded-For \$proxy_add_x_forwarded_for;

    # WebSocket support
    proxy_http_version 1.1;
    proxy_set_header Upgrade \$http_upgrade;
    proxy_set_header Connection "upgrade";
  }
}
